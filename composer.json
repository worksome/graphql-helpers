{
    "name": "worksome/graphql-helpers",
    "description": "This is my package graphql-helpers",
    "keywords": [
        "worksome",
        "laravel",
        "graphql-helpers"
    ],
    "homepage": "https://github.com/worksome/graphql-helpers",
    "license": "MIT",
    "authors": [
        {
            "name": "Owen Voke",
            "email": "owen.voke@worksome.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4",
        "illuminate/support": "^11.0 || ^12.0 || ^13.0",
        "jawira/case-converter": "^3.6",
        "webonyx/graphql-php": "^15.19"
    },
    "require-dev": {
        "larastan/larastan": "^3.9",
        "nunomaduro/collision": "^7.10 || ^8.1.1",
        "orchestra/testbench": "^9.12 || ^10.1 || ^11.0",
        "pestphp/pest": "^4.3",
        "pestphp/pest-plugin-laravel": "^4.0",
        "worksome/coding-style": "^3.3"
    },
    "autoload": {
        "psr-4": {
            "Worksome\\GraphQLHelpers\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Worksome\\GraphQLHelpers\\Tests\\": "tests"
        }
    },
    "scripts": {
        "lint": "vendor/bin/ecs --fix",
        "test:unit": "vendor/bin/pest -p",
        "test:coverage": "vendor/bin/pest -p --coverage",
        "test:types": "vendor/bin/phpstan analyse",
        "test:style": "vendor/bin/ecs",
        "test": [
            "@test:style",
            "@test:types",
            "@test:unit"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "worksome/coding-style": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
